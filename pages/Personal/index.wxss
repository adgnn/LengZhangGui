/* pages/Personal/index.wxss */
page{background:#eee;}
swiper image{width:100%;height:100%;}
.user_header{display:flex;background:#fff;padding:0.8rem 0.6rem;font-size:0.75rem;align-items: center;}
.user_img{width:70px;height:70px;display: inline-block;}
.user_img image{width:100%;height:100%;border-radius: 50%;}
.user_name{display: inline-block;margin:0.8rem; width:46%;}
.user_name_info{color:#666;font-weight: bold;font-size:0.85rem;}
.user_balance_info{color:#ddd;font-size:0.75rem;margin-top:0.5rem;}
.user_balance_info view{display: inline-block;}
.balance{color:orange;margin-left:0.3rem;font-weight: bold;font-size:0.85rem;}
.authStatus{
	font-size:0.85rem;
	background:#ccc;
	color:white;
	padding:0.1rem 0.6rem;
	border-radius:0.7rem;
}
.colorGreen{
	background:#009944;
}


