/* pages/resourse/index.wxss */

page {
	background: #eee;
}
.resource_login {
	font-size: 0.87rem;
}
.resource_top {
	background: #fff;
	padding: 0.5rem;
}
.depart {
	color: #666;
	margin: 0.7rem 0.7rem 0;
	display: flex;
	align-items: center;
	padding-bottom: 0.7rem;
	border-bottom: 1px solid #eee;
	justify-content: space-between;
}
.no_line {
	border: none;
}
.depart_img {
	width: 20px;
	height: 19px;
}
.depart_img, .sectionArea, .depart_text {
	display: inline-block;
	margin: 0.1rem;
}
.sectionArea {
	width: 60%;
	text-align: right;
	font-size: 0.85rem;
	display:flex;
	justify-content:flex-end;
}
.depart_text {
	width: 30%;
}
.picker {
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.sectionArea input {
	overflow: inherit;
	display: inline-block;
}
.charge {
	border: none;
	margin-bottom: 0;
	padding-bottom: 0;
}
.hr {
	width: 100%;
	height: 0.7rem;
	background: #eee;
}
.resource_bottom {
	background: #fff;
	padding: 0.5rem;
	margin-top: 0.6rem;
	padding-bottom: 1.5rem;
}
textarea {
	width: 90%;
	border: 1px solid #eee;
	height: 7rem;
	border-radius: 5px;
	margin: -0.8rem auto 0;
	padding: 0.6rem;
	box-sizing: border-box;
}
.check_agree {
	text-align: center;
	padding-top: 1rem;
	padding-bottom:4rem;
}
.check_box, .check_text {
	display: inline-block;
	font-size: 0.75rem;
	color: #666;
}
/*  重写 checkbox 样式  */

checkbox .wx-checkbox-input {
	border-radius: 20%;
	width: 1rem;
	height: 1rem;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
	border-radius: 0.1rem;
	width: 1rem;
	height: 1rem;
	line-height: 40rpx;
	text-align: center;
	font-size: 30rpx;
	color: yellowgreen;
}
button {
	width: 100%;
	background: #009944;
	color: #fff;
	font-size: .87rem;
	text-align: center;
	margin-top: 1rem;
	padding:0.6rem 0;
	border-radius:0;
}
.textarea_font {
	position: relative;
}
.weui-textarea-counter {
	width: 100%;
	position: absolute;
	right: 2rem;
	bottom: .2rem;
	font-size: 16px;
}
.subBtn{
	position:fixed;
	bottom:0;
	left:0;
	width:100%;
}
.unitInput{
   display: inline-block;
}
.unitPrice{
   display: inline-block;
   margin-left:0.3rem;
}
.unitPriceT{
   width:2.5rem;
}