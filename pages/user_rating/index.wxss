/* pages/user_rating/index.wxss */
page {
	margin: 0.5rem 0;
	background: #eee;
}
/* .col_line{width:1rem；height：1rem;background: #ddd;} */
.sectionArea {
	height: 2.2rem;
	background: #fff;
	line-height: 2.2rem;
	border-bottom:0.5rem solid #eee;
}
.block{width:65%;line-height:2.2rem;display: inline-block;}
.Area { 
	width: 30%;
	text-align: right;
	height: 2.2rem;
	background: #fff;
	display: inline-block;
	line-height: 2.2rem;
	margin: 0 1%;
}
.picker {
	display: inline-block;
	margin: 0 0.2rem;
	font-size: 0.75rem;
}
.arror {
	display: inline-block;
	margin: 0 0.2rem;
	font-size: 0.8rem;
	width: 10px;
	height: 5px;
}
.arror image {
	margin-bottom: 0.2rem;
	width: 100%;
	height: 100%;
}
.clearfix {
	clear: both;
}
.carInfo {
	font-size: 0.85rem;
	background: #fff;
	position: absolute;
	width: 100%;
}
.carInfo1, .carInfo2, .carInfo3 {
	display: flex;
	width: 100%;
	flex-wrap: wrap;
	text-align: center;
}
.carInfo1>view {
	width: 30%;
	border: 1px solid #eee;
	height: 1.8rem;
	line-height: 1.8rem;
	margin: 0.5rem 4% 0 3%;
}
/* .carInfo2{display: flex;width:100%;flex-wrap:wrap;} */

.carInfo2>view {
	width: 20%;
	border: 1px solid #eee;
	height: 1.5rem;
	line-height: 1.5rem;
	margin: 0.5rem 0 0 3%;
}
/* .carInfo3{display: flex;width:100%;flex-wrap:wrap;} */

.carInfo3>view {
	width: 20%;
	border: 1px solid #eee;
	height: 1.5rem;
	line-height: 1.5rem;
	margin: 0.5rem 0 0 3%;
}
button {
	width: 80%;
	background: #3492fb;
	color: #fff;
	margin-top: 2rem;
	margin-bottom: 2rem;
	font-size: .95rem;
	text-align: center;
	left: 45%;
	margin-left: -40%;
}
/*找车内容  */

.user_rating_cont_wrap{
	border-bottom: 0.4rem solid #eee;
}
.findCar_cont {
	background: #fff;
	display: flex;
	border-bottom: 0.01rem solid #eee;
	vertical-align: middle;
	align-items: center;
	padding: 3% 0;
}
.findCar_cont_Item {
	margin: 0 2%;
	width: 3.5rem;
	height: 3.5rem;
	border-radius:0.2rem;
	overflow: hidden;
}
.findCar_cont_Item image {
	border-radius: 0.5rem;
}
.custom_name{font-weight: bold; color:#000;font-size:0.95rem;}
.route {
	vertical-align: middle;
	color: #999;
	font-size: 0.8rem;
}
.route image {
	margin: 0 0.2rem;
}
.Item2 {
	font-size: 0.8rem;
	display: flex;
	margin:0;
	justify-content: space-between;
	flex-direction: column;
	white-space: nowrap;
	text-overflow: ellipsis;
	width: 44%;
	color: #b7b7b7;
	height:auto;
}
/*.length, .route, .findCar_Item_weight, .starWrap {
	 margin: 0.12rem 0; 
}*/
.findCar_Item_weight {
	display: flex;
	width: 60%;
}
.red {
	color: red;
	margin-left: 15%;
	font-weight: bold;
}
.Item3 {
	/*display: flex;
	justify-content: space-between;
	flex-direction: column;*/
	width:30%;
	text-align: right;
	margin-right: 4%;
}
.Item3 view {
	margin: 0 auto;
}
.order_details_time{font-size:0.75rem;color:#ddd;}
.contact_p {
	font-size: 0.85rem;
	border:1px solid #3492fb;
	border-radius:0.1rem;
	padding-top:0.5rem; 
	color: #3492fb;
}
.starWrap view {
	display: inline-block;
	margin-right: 0.2rem;
}
.starWrap image {
	width: 0.8rem;
	height: 0.8rem;
}/* pages/orderDetails/index.wxss */

 .no_border{
	border:0;
}
.user_review{background:#fff;text-align: right;display: flex;justify-content: flex-end;padding:0.5rem 0; font-size:0.95rem;}
.orange{background: orange;color:#fff;width:20%;text-align: center;border-radius:0.2rem;margin-right: 6%;}